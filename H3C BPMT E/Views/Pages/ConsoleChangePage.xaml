<Page
    x:Class="H3C_BPMT_E.Views.Pages.ConsoleChangePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:H3C_BPMT_E.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ConsoleChangePage"
    d:DataContext="{d:DesignInstance local:ConsoleChangePage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  上传按钮  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal">
            <Button
                Name="UploadButton"
                Width="150"
                Height="30"
                Command="{Binding ViewModel.UploadCommand}"
                Content="上传XLSX文件" />
            <Button
                Name="StartButton"
                Width="150"
                Height="30"
                Margin="10,0,0,0"
                Command="{Binding ViewModel.StartCommand}"
                Content="{Binding ViewModel.StartText, FallbackValue=开始}" />
            <ui:TextBlock
                Margin="10,0,0,0"
                FontSize="20"
                Text="Console 口密码修改"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  表格  -->
        <DataGrid
            Name="DataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="True"
            ItemsSource="{Binding ViewModel.SwitchList}"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding IPAddress}"
                    Header="IP地址"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Port, FallbackValue=22}"
                    Header="端口"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Username}"
                    Header="用户名"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Password}"
                    Header="密码"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ConsolePassword}"
                    Header="Console 口密码"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CompletionStatus}"
                    Header="完成状态"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  执行状态  -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--  StatusText 自适应宽度  -->
                <ColumnDefinition Width="*" />
                <!--  ProgressBar 占满剩余空间  -->
            </Grid.ColumnDefinitions>

            <!--  状态文本  -->
            <TextBlock
                Name="StatusText"
                Grid.Column="0"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="{Binding ViewModel.StatusText}" />

            <!--  进度条  -->
            <ProgressBar
                Name="ProgressBar"
                Grid.Column="1"
                Height="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Value="{Binding ViewModel.ProgressValue}" />
        </Grid>
    </Grid>
</Page>
